<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTintMode="screen"
    android:background="#D3D3D3"
    android:weightSum="10"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="830dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:background="#FFF"
        android:columnCount="2"
        android:columnOrderPreserved="false"

        android:rowCount="3">

        <!-- ROW 1  -->
        <!-- COLUMN 1  -->


        <!-- COLUMN 2  -->

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="10sp"
            android:layout_row="0"
            android:layout_rowWeight="1"


            android:layout_column="0"
            android:layout_columnWeight="1"
            android:cardCornerRadius="8dp"
            android:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="124dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/kopi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Kopi Hitam"
                    android:textAlignment="center"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stok:3000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Harga : Rp.5000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@color/dot_dark_screen3"
                    android:text="Buy"
                    android:textColor="#FFF"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="136dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/tahu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahu"
                    android:textAlignment="center"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stok:3000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Harga : Rp.5000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dot_dark_screen3"
                    android:text="Buy"
                    android:textColor="#FFF" />


            </LinearLayout>

        </RelativeLayout>


        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="51dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="124dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pudding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pudding"
                    android:textAlignment="center"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stok:4904"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Harga : Rp.5000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textColor="#FFF"
                    android:layout_marginTop="10dp"
                    android:background="@color/dot_dark_screen3"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- COLUMN 2  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="143dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/nasgor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nasi Goreng"
                    android:textAlignment="center"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stok:2000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Harga : Rp.10.000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textColor="#FFF"
                    android:layout_marginTop="10dp"
                    android:background="@color/dot_dark_screen3"/>


            </LinearLayout>

        </RelativeLayout>


        <!-- ROW 3  -->
        <!-- COLUMN 1  -->


        <!-- COLUMN 2  -->


    </GridLayout>



</LinearLayout>